---
- name: Install and configure HTTPd server
  hosts: 192.168.33.{{ip1}}
  become: yes

  tasks:
    - name: Install Apache2
      apt:
        name: apache2
        state: present
      when: ansible_os_family == 'Debian'

    - name: Install postgres Client
      apt:
        name: postgres-client
        state: present
      when: ansible_os_family == 'Debian'