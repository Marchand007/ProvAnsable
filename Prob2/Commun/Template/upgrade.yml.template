- name: Update Debian-based Systems
  hosts: [{{ClientName}}]
  become: yes

  tasks:
    - name: Update package cache
      apt:
        update_cache: yes
      when: ansible_os_family == 'Debian'

    - name: Upgrade all packages
      apt:
        upgrade: yes
        autoremove: yes
        autoclean: yes
      when: ansible_os_family == 'Debian'